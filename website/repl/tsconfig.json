{
  "compilerOptions": {
      "allowJs": true,
      "baseUrl": "src",
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["ES2018", "DOM"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "outDir": "dist",
      "strict": true,
      "target": "ES2020",
      "paths": {
        "@expressive/plugin-*": [
          "../../../packages/plugin-*/src"
        ],
        "@website/*": [
          "../../*/src"
        ],
      }
  }
}