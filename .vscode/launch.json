{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Preset Tests",
      "cwd": "${workspaceFolder}/packages/babel-preset-react",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--watchAll",
        "--runInBand",
        "${input:testName}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Plugin v2",
      "cwd": "${workspaceFolder}/packages/babel-preset-web",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["debug/script.ts"],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Plugin v2 Tests",
      "cwd": "${workspaceFolder}/packages/babel-preset-web",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--watchAll",
        "--runInBand",
        "${input:testName}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Preset",
      "cwd": "${workspaceFolder}/packages/babel-preset-react",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["debug/script.ts"],
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test suite to run a debug session for."
    }
  ]
}