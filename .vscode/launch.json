{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "cwd": "${workspaceFolder}/packages/babel-plugin-jsx",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--watchAll",
        "--runInBand",
        "${input:testName}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ts-node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/packages/babel-preset-react/debug/script.ts"],
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test suite to run a debug session for."
    }
  ]
}