{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}/packages/tests",
      "args": ["--watchAll", "--runInBand", "--config=jest.config.js", "${input:testName}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "XJS -> JSX",
      "program": "${workspaceFolder}/packages/develop/bin/debug.js",
      "cwd": "${workspaceRoot}/packages/develop",
      "protocol": "inspector",
      "sourceMaps": true,
      "env": { "TARGET": "jsx" },
      "envFile": "${workspaceRoot}/tests/.env",
      "runtimeArgs": ["-r", "source-map-support/register"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "XJS -> JS",
      "program": "${workspaceFolder}/packages/develop/bin/debug.js",
      "cwd": "${workspaceRoot}/packages/develop",
      "protocol": "inspector",
      "sourceMaps": true,
      "env": { "TARGET": "js" },
      "envFile": "${workspaceRoot}/tests/.env",
      "runtimeArgs": ["-r", "source-map-support/register"]
    },
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test you wish to run a debug session for."
    }
  ]
}