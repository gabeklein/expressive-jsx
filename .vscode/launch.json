{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Repl",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder}/website/repl"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Preset",
      "cwd": "${workspaceFolder}/packages/babel-preset",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["debug/script.ts"],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["${relativeFile}", "--testTimeout", "10000000"],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "program": "node_modules/vite/bin/vite.js",
      "request": "launch",
      "cwd": "${workspaceFolder}/website/home",
      "name": "Launch Vite",
      "args": ["--config", "vite.config.ts"],
      "runtimeArgs": ["--inspect-brk"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test suite to run a debug session for."
    }
  ]
}