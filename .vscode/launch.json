{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "cwd": "${workspaceFolder}/packages/babel-plugin-jsx",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--testPathIgnorePatterns", "v2",
        "--watchAll",
        "--runInBand",
        "${input:testName}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "V2 Jest Tests",
      "cwd": "${workspaceFolder}/packages/babel-plugin-jsx",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "env": {
        "V2": "true"
      },
      "args": [
        "--testPathIgnorePatterns", "v1",
        "--watchAll",
        "--runInBand",
        "${input:testName}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test suite to run a debug session for."
    }
  ]
}