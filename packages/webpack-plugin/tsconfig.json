{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strict": true,
    "types": ["node"],
    "paths": {
      "@expressive/*": ["../*/src"]
    }
  },
  "include": ["src"]
}