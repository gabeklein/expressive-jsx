    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "types": [
      "node"
