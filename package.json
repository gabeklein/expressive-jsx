{
  "name": "expressive-jsx",
  "private": true,
  "description": "An alternative syntax for JSX constructs using less code",
  "type": "module",
  "scripts": {
    "build": "lerna run build --stream",
    "repl": "npm --prefix website/repl run dev",
    "test": "vitest --no-watch",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "keywords": [
    "react",
    "expressive",
    "syntax"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.3.1",
    "lerna": "^8.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2",
    "vitest": "^3.0.4"
  }
}