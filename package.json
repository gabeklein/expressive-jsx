{
	"name": "expressive-jsx",
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"description": "An alternative syntax for JSX constructs using less code",
	"scripts": {
		"test": "npm run test --prefix packages/test-react",
		"watch": "npm run watch --prefix packages/plugin-jsx",
		"clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
	},
	"keywords": [
		"react",
		"expressive",
		"syntax"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.3.1",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"eslint": "^8.42.0",
		"lerna": "^7.0.2",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3",
    "tsconfig-paths": "^4.2.0"
	}
}
